{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": ["ESNext"],
        "outDir": "lib",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipDefaultLibCheck": false,
        "resolveJsonModule": true,
        "allowJs": true
    },
    "include": ["index.ts", "bin.ts", "tests/**/*.ts", "src/**/*.ts"],
    "exclude": ["node_modules", "lib"]
}
