{
    "name": "@giancarl021/ifmd",
    "version": "0.1.13",
    "description": "Markdown to PDF engine, allowing custom templates with the knowledge of web tecnologies",
    "main": "lib/index.js",
    "repository": "https://github.com/Giancarl021/ifmd.git",
    "author": "Giancarlo Fontela da Luz <gian.f.luz@hotmail.com>",
    "license": "MIT",
    "private": false,
    "files": [
        "lib/**/*",
        "!lib/tmp/"
    ],
    "bin": {
        "ifmd": "lib/bin.js"
    },
    "scripts": {
        "dev": "cross-env IFMD_DEBUG=true ts-node bin.ts",
        "format": "prettier -w --config .prettierrc --ignore-path .prettierignore .",
        "ci": "yarn install --frozen-lockfile",
        "start": "node lib/bin.js",
        "docs": "cli-core-docs-generator generate ifmd ./src/util/help.json -o .github -f",
        "prepreview": "yarn build",
        "preview": "node lib/bin.js",
        "build": "tsc -p tsconfig.lib.json",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "postbuild": "node scripts/postbuild.js",
        "postinstall": "node scripts/postinstall.js",
        "git-add": "git add ."
    },
    "pre-commit": [
        "format",
        "build",
        "docs",
        "git-add"
    ],
    "dependencies": {
        "@giancarl021/cli-core": "^0.1.3",
        "@giancarl021/cli-core-vault-extension": "^0.1.4",
        "@giancarl021/locate": "^0.1.7",
        "any-date-parser": "^1.5.4",
        "cheerio": "^1.0.0",
        "chokidar": "^3.6.0",
        "dompurify": "^3.1.6",
        "escape-html": "^1.0.3",
        "ignore": "^5.3.2",
        "jsdom": "^25.0.0",
        "marked": "^14.1.0",
        "marked-katex-extension": "^5.1.2",
        "mermaid": "^11.0.2",
        "puppeteer": "^23.2.1",
        "recursive-copy": "^2.0.14",
        "serve-handler": "^6.1.5",
        "socket.io": "^4.7.5",
        "timestring": "^7.0.0"
    },
    "devDependencies": {
        "@giancarl021/cli-core-docs-generator": "^0.1.0",
        "@jest/globals": "^29.7.0",
        "@types/dompurify": "^3.0.5",
        "@types/escape-html": "^1.0.4",
        "@types/jsdom": "^21.1.7",
        "@types/node": "^22.5.1",
        "@types/serve-handler": "^6.1.4",
        "@types/timestring": "^6.0.5",
        "cross-env": "^7.0.3",
        "jest": "^29.7.0",
        "pre-commit": "^1.2.2",
        "prettier": "^3.3.3",
        "rimraf": "^6.0.1",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.5.4"
    },
    "keywords": [
        "docs",
        "documentation",
        "markdown",
        "pdf"
    ]
}
